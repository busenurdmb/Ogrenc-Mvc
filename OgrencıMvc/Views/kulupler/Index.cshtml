@using OgrencıMvc.Models.EntityFramwork
@model List<TBLKULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>KULÜP ID</th>
        <th>KULÜP ADI</th>
        <th>İŞLEMLER</th>

    </tr>
    <tbody>
        @foreach(var klp in Model)
            {
        <tr>
            <td>@klp.KULUPID</td>
            <td>@klp.KULUPAD</td>
            <td><a href="/kulupler/sil/@klp.KULUPID" class="btn btn-danger">Sil</a>
            <a href="/kulupler/KulüpGetir/@klp.KULUPID" class="btn btn-success">Güncelle</a></td>
        </tr>
            }
        <tr>

        </tr>
    </tbody>

</table>
<a href="/kulupler/YeniKulüp" class="btn btn-primary"> Yeni Kulüp Ekle</a>

